{
  "name": "nostr-relay",
  "version": "2.3.0",
  "description": "Whitelist-based Nostr relay with PostgreSQL persistence",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:live": "RELAY_WS_URL=wss://nostr-relay-617806532906.us-central1.run.app jest --testTimeout=60000",
    "test:integration": "RELAY_WS_URL=wss://nostr-relay-617806532906.us-central1.run.app jest --testPathPattern='(nip01-protocol|websocket-connection)' --testTimeout=60000"
  },
  "dependencies": {
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^2.0.1",
    "dotenv": "^16.3.1",
    "nostr-tools": "^2.19.3",
    "pg": "^8.13.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
